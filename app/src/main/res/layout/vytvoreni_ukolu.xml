<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <!-- První část s relativním layoutem pro logo a profilové informace -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recCard"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Logo -->
            <ImageView
                android:id="@+id/logo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:contentDescription="Logo aplikace"
                android:src="@drawable/bluelogo" />

            <!-- Ikona profilu -->
            <ImageView
                android:id="@+id/profileIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:contentDescription="Profil uživatele"
                android:src="@drawable/baseline_account_box_24" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!-- Druhá část s lineárním layoutem pro tlačítka a texty -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"

        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingTop="16dp">

        <!-- Texty a tlačítka -->
        <TextView
            android:id="@+id/greetingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vytvořit úkol"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:paddingTop="30dp"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/statisticsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pridani_vyzvi_popis"
            android:textSize="16sp"
            android:textColor="#000000"
            android:paddingBottom="25dp" />

        <!-- Tlačítka -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/zadej_nazev"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="10dp"
                android:hint="Název výzvi"
                android:inputType="text"
                android:background="#E3E8FF"
                android:layout_marginBottom="10dp"
                />

            <EditText
                android:id="@+id/largeEditText"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:hint="Zadejte popis úkolu"
                android:inputType="textMultiLine"
                android:gravity="top|start"
                android:scrollbars="vertical"
                android:maxLines="10"
                android:padding="10dp"
                android:layout_marginBottom="10dp"
                android:background="#E3E8FF"
                />

            <EditText
                android:id="@+id/points"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:hint="Za kolik bodů je úkol?"
                android:inputType="textMultiLine"
                android:gravity="top|start"
                android:scrollbars="vertical"
                android:maxLines="10"
                android:padding="10dp"
                android:layout_marginBottom="10dp"
                android:background="#E3E8FF"
                />

            <!-- Počet bodů, kategorie -->

            <Button
                android:id="@+id/btnCreateTask"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:backgroundTint="#E3E8FF"
                android:text="Vytvořit úkol"
                android:textColor="@color/white"
                android:background="@color/blue"
                android:radius="50dp"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>